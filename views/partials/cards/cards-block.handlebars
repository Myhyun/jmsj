<div class="card bg-secondary mt-2">
    <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{platform}}</p>
        <button type="submit" class="btn btn-default bg-light btn-sm bt-sm currentwatch">Currently
            Watching
        </button>
    </div>
</div>



<button type="button" class="btn btn-secondary btn-small devour" value="{{ id }}">Devour It!</button>

$(() => {
  $(".currentwatch").on("click", function () {
    const binge_id = this.value;
    $.ajax({
      method: "PATCH",
      url: `/binges/${binge_id}/`,
    }).then(() => {
      // reload page to display devoured burger in proper column
      location.reload();
    });
  });
});

